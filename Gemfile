# Gems host
source 'http://rubygems.org'

gem 'rails', '~> 3.2.0'
gem 'rake', '~> 0.9.1'
gem 'pg'                #postgres db
gem 'hirb'              # Better console formatting. Needs .hirbrc
gem 'sorcery'           # login system
gem 'redcarpet'         # markdown formatting
gem 'simple_form'       # haml for forms
gem 'friendly_id'       # pretty URLs
gem 'carrierwave'       # image uploads
gem 'rmagick'           # image manipulation
gem 'kaminari'          # pagination
gem 'capistrano'        # Deployment manager
gem 'rack-pjax'         # ajax for rack apps
gem 'jquery-ui-rails'   # Jquery Ui
gem 'acts_as_list'      # Used for sorting items
gem 'haml', '~> 3.1'    # Haml (html/erb replacement)
gem 'jquery-rails'      # jQuery for rails

gem 'haml-rails', :group => :development # Haml generators for Rails 3

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.2.3"
  gem 'coffee-rails', "~> 3.2.1"
  gem 'uglifier', '>= 1.0.3'
  # HTML/CSS framework and boilerplate
  gem 'compass-susy-plugin', '0.9', :require => 'susy'
  gem 'compass-rails', '>= 1.0.0.rc.1'
  gem 'compass_twitter_bootstrap', git: "https://github.com/vwall/compass-twitter-bootstrap.git" # twitter bootstrap for compass, haml and sass
end
