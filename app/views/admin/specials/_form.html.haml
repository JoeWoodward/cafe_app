= simple_form_for([:admin, @special], :html => { :class => 'form-horizontal' }) do |f|
  = f.input :title, :input_html => { :class => "span6" }
  .markdown-enabled
    = f.input :description, input_html: { :class => "span6" }
    = render 'layouts/admin/markdown_guide'
  .control-group
    %label.control-label * Price
    .controls
      .input-prepend.price-field
        %span.add-on Â£
        = f.text_field :price_pound, class: 'price-input'
        \.
      .input-append.price-field
        = f.text_field :price_pence, class: 'price-input'
        %span.add-on p
  .form-actions
    = f.button :submit, 'Save', :class => 'btn-primary'
    = yield :special_item_form_button
